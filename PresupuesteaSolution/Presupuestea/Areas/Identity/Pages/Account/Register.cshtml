@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Soy cliente</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerInputModel.Email"></label>
                <input asp-for="CustomerInputModel.Email" class="form-control" />
                <span asp-validation-for="CustomerInputModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerInputModel.PostalCode"></label>
                <input asp-for="CustomerInputModel.PostalCode" class="form-control" />
                <span asp-validation-for="CustomerInputModel.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerInputModel.Password"></label>
                <input asp-for="CustomerInputModel.Password" class="form-control" />
                <span asp-validation-for="CustomerInputModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerInputModel.ConfirmPassword"></label>
                <input asp-for="CustomerInputModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="CustomerInputModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Soy Profesional</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="ContractorInputModel.SelectedCategory"></label>
                <select asp-for="ContractorInputModel.SelectedCategory" asp-items="Model.ContractorInputModel.Categories"></select>
                <span asp-validation-for="ContractorInputModel.SelectedCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContractorInputModel.Email"></label>
                <input asp-for="ContractorInputModel.Email" class="form-control" />
                <span asp-validation-for="ContractorInputModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractorInputModel.PostalCode"></label>
                <input asp-for="ContractorInputModel.PostalCode" class="form-control" />
                <span asp-validation-for="ContractorInputModel.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractorInputModel.Password"></label>
                <input asp-for="ContractorInputModel.Password" class="form-control" />
                <span asp-validation-for="ContractorInputModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractorInputModel.ConfirmPassword"></label>
                <input asp-for="ContractorInputModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="ContractorInputModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-2">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
