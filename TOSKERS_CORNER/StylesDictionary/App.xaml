<Application x:Class="StylesDictionary.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StylesDictionary"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Se supone, que en nuestra aplicación sólo podemos tener un resourceDictionary..Como
        tenemos varios, lo que tenemos que hacer es mergearlo en uno sólo..-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionary/ButtonDictionary.xaml"/>
                <ResourceDictionary Source="ResourceDictionary/LabelDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>         
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
